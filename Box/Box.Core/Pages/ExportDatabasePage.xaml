<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteTutorial.ExportDatabasePage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button x:Name="ExportDatabaseButton" AutomationId="ExportDatabaseButton" Text="Backup Database" Style="{StaticResource buttonBlueStyle}"
                    Command="{Binding ExportCommand}" Margin="0,10"/>
            <Button x:Name="ExportSCVButton" AutomationId="ExportSCVButton" Text="Export Database as CSV" Style="{StaticResource buttonBlueStyle}"
                    Command="{Binding ExportCSVCommand}" Margin="0,10"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>