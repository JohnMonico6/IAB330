<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteTutorial.ExportDatabasePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Export Database Page" />
            <Button x:Name="ExportDatabaseButton" AutomationId="ExportDatabaseButton" Text="Export your Database" Style="{StaticResource buttonBlueStyle}"
                    Command="{Binding ExportCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>